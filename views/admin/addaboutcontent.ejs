<%- include('../front/header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <%- include('../admin/adminsidebar.ejs') %>
                
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                          <div class="dash-title">
                              <h1>Create Blog</h1>
                          </div>
                        </div>
                        <div class="blog-form">
                          <form action="/admin/insert_aboutcontent" method="post" enctype="multipart/form-data">
                            <div class="form-group form-row">
                                <label class="col-md-3">Title <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <input type="text" name="title" class="form-control" placeholder="Title" required>
                                </div>
                            </div>      
                                 
                            <div class="form-group form-row">
                                <label class="col-md-3">Content <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <textarea  name="content" rows="5" class="form-control" placeholder="Content..." required></textarea>
                                </div>
                            </div>
      
                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                  <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                          </form>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('../front/footer.ejs') %>
<%- include('../../front/header.ejs') %>
<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <!-- <ul>
                            <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
                            <li><a href="/admin/blogs">Blogs</a></li>
                            <li><a href="#">Logout</a></li>
                        </ul> -->
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                          <div class="dash-title">
                              <h1>Edit Blog</h1>
                          </div>
                        </div>
                        <div class="blog-form">
                          <form action="/admin/updateblog/<%= edata._id %>" method="post" enctype="multipart/form-data">
                            <!-- <input type="hidden"  name="id" value="<%= edata._id %>"> -->
                            <div class="form-group form-row">
                                <label class="col-md-3">Title <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <input type="text" value="<%= edata.title %>" name="title" class="form-control" placeholder="Title" required>
                                </div>
                            </div>   
                            <div class="form-group form-row">
                                <label class="col-md-3">Image <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <img src="<%= edata.image.url %>" width="100" alt=""><br><br>
                                  <input type="file" name="blog_image">
                                </div>
                            </div>              
                            <div class="form-group form-row">
                                <label class="col-md-3">Description <span class="required">*</span></label>
                                <div class="col-md-9">
                                    <textarea type="text" name="description" rows="5" class="form-control" placeholder="Description" required  cols="30" rows="10"><%= edata.description %></textarea>
                                  
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                  <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                          </form>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>
    

<%- include('../../front/footer.ejs') %>
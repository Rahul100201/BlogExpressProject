<%- include('../../front/header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                          <div class="dash-title">
                              <h1>Edit Category</h1>
                          </div>
                        </div>
                        <div class="blog-form">
                          <form action="/admin/categoryupdate/<%= edata._id %>" method="post">
                            <div class="form-group form-row">
                                <label class="col-md-3">Title <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <input type="text" value="<%= edata.title %>" name="title" class="form-control" placeholder="Title" required>
                                </div>
                            </div>              
                            <div class="form-group form-row">
                                <label class="col-md-3">Description <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <textarea  name="description" rows="5" class="form-control" placeholder="Description" required><%= edata.description %></textarea>
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3">Name <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <input type="text" name="name" value="<%= edata.name %>" class="form-control" placeholder="Name" required>
                                </div>
                            </div>              
                            <div class="form-group form-row">
                                <label class="col-md-3">Email <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <input name="email" rows="5" value="<%= edata.email %>" class="form-control" placeholder="Email" required>
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                  <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                          </form>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('../../front/footer.ejs') %>